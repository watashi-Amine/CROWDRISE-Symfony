{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Projet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idprojet</th>
                <th>Nomprojet</th>
                <th>Resume</th>
                <th>Budjet</th>
                <th>Argent</th>
                <th>Imagefile</th>
                <th>Image</th>
                <th>Fichierfile</th>
                <th>Fichier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('projet_show', { 'id': entity.idProjet }) }}">{{ entity.idProjet }}</a></td>
                <td>{{ entity.nomProjet }}</td>
                <td>{{ entity.resume }}</td>
                <td>{{ entity.budjet }}</td>
                <td>{{ entity.argent }}</td>
                <td>{{ entity.imageFile }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.fichierFile }}</td>
                <td>{{ entity.fichier }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('projet_show', { 'id': entity.idProjet }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('projet_edit', { 'id': entity.idProjet }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('projet_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
