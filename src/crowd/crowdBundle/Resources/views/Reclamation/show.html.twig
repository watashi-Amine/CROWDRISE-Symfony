{% extends '::enligne.html.twig' %}

{% block body -%}

    <h1 class="panel-title">Reclamation</h1>
    <table id="shTable" class="table table-striped table-bordered">
        <thead class="">
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Notification</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr>
